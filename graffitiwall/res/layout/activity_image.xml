<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/chalkboard_black" >

    <ImageView
        android:id="@+id/iv_image_preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ll_control_bar"
        android:contentDescription="@string/content_desc_image_prev" />

    <LinearLayout
        android:id="@+id/ll_control_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:weightSum="2" >

        <Button
            android:id="@+id/ib_refresh"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="#FF54003D"
            android:contentDescription="@string/content_desc_take_pictrue"
            android:text="@string/button_refresh"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            tools:ignore="ButtonStyle" />

        <Button
            android:id="@+id/ib_upload"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="#FFC3C00F"
            android:contentDescription="@string/content_desc_write_comment"
            android:text="@string/button_upload"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            tools:ignore="ButtonStyle" />

    </LinearLayout>

</RelativeLayout>